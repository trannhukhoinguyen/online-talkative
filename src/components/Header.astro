---
import TextSlider from "../components/TextSlider.astro";
import Separator from "../components/Separator.astro";

// Get the current pathname
const currentPath = Astro.url.pathname;
// Define a map of routes
const routes = {
  "/": "Home",
  "/connection/": "Connection",
  "/contexts/": "Contexts",
  "/grammar/": "Grammar",
  "/vocabulary/": "Vocabulary",
};
// Determine the active route
const activeRoute = routes[currentPath] || null;
---

<header>
  <h1>
    <a href="/" class={activeRoute === "Home" ? "current" : ""}
      ><TextSlider content="Talkative" /></a>
  </h1>
  <span><TextSlider content="Conversation" /></span>
  <ul>
    <li>
      <a
        href="/connection/"
        class={activeRoute === "Connection" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Connection" /></a>
    </li>
    <li>
      <a
        href="/contexts/"
        class={activeRoute === "Contexts" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Contexts" /></a>
    </li>
    <li>
      <a
        href="/grammar/"
        class={activeRoute === "Grammar" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Grammar" /></a>
    </li>
    <li>
      <a
        href="/vocabulary/"
        class={activeRoute === "Vocabulary" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Vocabulary" /></a>
    </li>
  </ul>
</header>
<Separator />

<style>
  header {
    position: relative;
    display: grid;
    grid-template-columns: min-content auto;
    font-weight: 700;
    padding: 1rem 0;
    gap: 1rem;
  }
  header a.current {
    pointer-events: none;
  }
  h1 {
    font-size: 1rem;
    font-weight: inherit;
    margin: 0;
  }
  ul {
    display: flex;
    list-style: none;
    gap: 1rem;
    margin: 0;
    padding: 0;
    grid-column: auto / span 2;
  }
  @media screen and (min-width: 50em) {
    header {
      grid-template-columns: 20vw 1fr auto auto;
    }
  }
</style>
